<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.mybatis.jpetstore.mapper.ItemMapper">



	<insert id="insertProduct" parameterType="com.asksunny.batch.tasklets.Demo1">
		insert into DEMO1 (id,
		name) values (#{id:INTEGER}, #{name:VARCHAR});
	</insert>

	<select id="getItemListByProduct" resultType="com.asksunny.batch.tasklets.Demo1">
		SELECT id, name
		FROM DEMO1
	</select>

	<update id="updateProduct1">
		update DEMO1 set name='XYZ' where id=1
	</update>
	<update id="updateProduct2">
		update DEMO1 set name='XYZ' where id=2
	</update>
	<update id="updateProduct3">
		update DEMO1 set name='XYZ' where id=3
	</update>
	<update id="updateProduct4">
		update DEMO1 set name='XYZ' where id=4
	</update>
	<update id="updateProduct5">
		update DEMO1 set name='XYZ' where id=5
	</update>

</mapper>